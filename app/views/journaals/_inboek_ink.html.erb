            <div class="icoon"></div>
            <div class="sign"></div>
            <div class="gbr-w"></div>
            <div class="gbr-orgnaam"></div>
            <div class="gbr-n"></div>
            <div class="ks"></div>
            <div class="kf"> </div>
        </div>
        <div class="gbr-row-rechtplicht eurox">
            <div class="dd">1 feb</div>
            <div class="gbr-ovr">ink-1101</div>
            <div class="beschrijving">brood</div>
