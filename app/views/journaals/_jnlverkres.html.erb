<% if @jnl_verk_search %>
    <div class="boekin">
        <div class="overeenkomst">
            <div class="inkoop-ovr">
                <div class="head">
                    <div class="text">verkoopovereenkomst</div>
                </div>
                <div class="body">
                    <div class="inline">
                        <div class="blok">
                            <div class="text"></div>
                            <!-- Datum -->
                            <input class="form" type="text" name="datum" value="<%= @jnl_verk_search.datum %>">
                        </div>
                        <div class="blok"></div>
                        <div class="blok">
                            <div class="text"></div>
                            <!-- Boeknummer -->
                            <input class="form" type="text" name="boeknummer" value="<%= @jnl_verk_search.boeknummer %>">
                        </div>
                    </div>
                    <div class="inline">
                        <div class="blok">
                            <div class="text"></div>
                            <div></div>
                        </div>
                        <div class="blok">
                            <div class="text">valuta </div>
                            <input class="form" type="text" name="valuta" value="<%= @jnl_verk_search.valuta %>">
                        </div>
                        <div class="blok">
                            <div class="text">productnaam</div>
                            <input class="form" type="text" name="productnaam" value="<%= @jnl_verk_search.productnaam %>">
                        </div>
                    </div>
                    <div class="inline">
                        <div class="blok">
                            <div class="text">klant</div>
                            <input class="form" type="text" name="klant" value="<%= @jnl_verk_search.klant %>">
                        </div>
                        <div class="blok">
                            <div class="text">te betalen</div>
                            <input class="form euro" type="text" name="bedrag_inc_btw" value="<%= @jnl_verk_search.bedrag_inc_btw %>">
                        </div>
                        <div class="blok">
                            <div class="text">te ontvangen</div>
                            <input class="form" type="text" name="hoeveelheid" value="<%= @jnl_verk_search.hoeveelheid %>">
                        </div>
                    </div>
                    <div class="inline">
                        <div class="blok">
                            <div class="text">leverancier</div>
                            <input class="form" type="text" name="klant" value="<%= @organisatie_search.naam %>">
                        </div>
                        <div class="blok">
                            <div class="text">te ontvangen</div>
                            <input class="form euro" type="text" name="bedrag_inc_btw" value="<%= @jnl_verk_search.bedrag_inc_btw %>">
                        </div>
                        <div class="blok">
                            <div class="text">te leveren</div>
                            <input class="form" type="text" name="hoeveelheid" value="<%= @jnl_verk_search.hoeveelheid %>">
                        </div>
                    </div>
                    <div class="inline">
                        <div class="blok">
                            <div class="text">belastingdienst</div>
                            <input class="form" type="text" name="klant" value="<%= @jnl_verk_search.leverancier %>">
                        </div>
                        <div class="blok">
                            <div class="text">te ontangen btw</div>
                            <input class="form euro" type="text" name="bedrag_inc_btw" value="<%= @jnl_verk_search.bedrag_inc_btw - @jnl_verk_search.bedrag_ex_btw %>">
                        </div>
                    </div>
                </div>
                <div class="scrollyvoorwaarden">
                    <div class="voorwaarden">VOORWAARDEN</div>
                    <div class="voorwaarden_wrapx ">
                        <div class="inline">
                            <div class="text">btw percentage</div>
                            <input class="form euro" type="text" name="btw_percentage" value="<%= @jnl_verk_search.btw_percentage %>">
                        </div>
                        <div class="inline">
                            <div class="text">bedrag exc. BTW</div>
                            <input class="form euro" type="text" name="bedrag_ex_btw" value="<%= @jnl_verk_search.bedrag_ex_btw %>">
                        </div>
                        <div class="inline">
                            <div class="text">prijs</div>
                            <input class="form" type="text" name="stukprijs" value="<%= @jnl_verk_search.stukprijs %>">
                        </div>
                        <div class="inline">
                            <div class="text">eenheid</div>
                            <input class="form" type="text" name="eenheid" value="<%= @jnl_verk_search.eenheid %>">
                        </div>
                        <div class="inline">
                            <div class="text">betalingswijze</div>
                            <input class="form" type="text" name="betalingswijze" value="<%= @jnl_verk_search.betalingswijze %>">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <% end %>
        <script type="text/javascript">
        $(document).ready(function() {

            $(".scrollyvoorwaarden .voorwaarden").click(function() { // werkt niet
                $(".scrollyvoorwaarden .voorwaarden_wrapx").toggle();
            });

        });
        </script>