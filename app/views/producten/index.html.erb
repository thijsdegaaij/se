<p id="notice"><%= notice %></p>

<h1>Listing Producten</h1>

<table>
  <thead>
    <tr>
      <th>Naam</th>
      <th>Icoon</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @producten.each do |product| %>
      <tr>
        <td><%= product.naam %></td>
        <td><%= image_tag product.icoon_url(:thumb).to_s %></td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

